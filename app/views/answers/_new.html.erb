<h2><%= question.title %></h2>

<%= form_with model: answer do |f| %>
  <%= f.hidden_field :question_id, value: question.id %>
  <%= f.submit question.answer_1, class: "btn btn-primary p-3" %>
  <%= f.submit question.answer_2, class: "btn btn-primary p-3" %>
  <%= f.submit question.answer_3, class: "btn btn-primary p-3" %>
<% end %>