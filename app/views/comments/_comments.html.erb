<table class="table">
  <thead>
    <tr>
      <th>comment</th>
      <th>auther</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if comments.any? %>
      <% comments.each do |comment| %>
        <tr>
          <td><%= simple_format comment.comment %></td>
          <td><%= link_to comment.user.name, user_path(comment.user) %></td>
          <td><%= l comment.created_at, format: :long %></td>
          <td>
            <% if current_user && comment.user == current_user %>
              <%= link_to "削除", comment_path(comment), method: :delete %>
            <% elsif current_admin %>
              <%= link_to "削除", admin_comment_path(comment), method: :delete %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan=4>コメントはまだありません</td>
      </tr>
    <% end %>
  </tbody>
</table>