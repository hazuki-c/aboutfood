<h1>choice group</h1>

<h2><%= @user.name %>'s page</h2>
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
    </div> 
    <div class="col-md-8 offset-md-1">  
      <ul class="navbar navbar-left bg-left">
        <%= link_to "<i class='fa-regular fa-pen-to-square'></i>New post".html_safe, new_post_path, class: "btn btn-primary" %>
      </ul>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Comment</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <a href="<%= post_path(post) %>"><%= post.title %></a>
              </td>
              <td>
                <%= link_to "#{post.comments.count} ", post_path(post.id) %>
                <%= render "favorites/favorite_button", post: post %>
              </td>
              <td>
                
              </td>
            </tr>  
          <% end %>
        </tbody>
      </table>
      
    </div>
</div>