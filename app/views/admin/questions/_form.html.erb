<div class="row">
  <div class="col-md-8 offset-2">
    <%= form_with model: [:admin, question] do |f| %>
      <%= render 'layouts/error_messages', resource: f.object %>
      
      <div class="mb-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :answer_1 %>
        <%= f.text_field :answer_1, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :answer_2 %>
        <%= f.text_field :answer_2, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :answer_3 %>
        <%= f.text_field :answer_3, class: "form-control" %>
      </div>
      
      <div class="my-4 d-flex justify-content-center">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>