<ul class="navbar navbar-light bg-light">
  <%= render 'searches/form' %>
  <%= link_to "<i class='fa-regular fa-pen-to-square'></i>New post".html_safe, new_post_path, class: "btn btn-primary" %>
</ul>

<h1>Posts</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Image</th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <% if post.user.profile_image.attached? %>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.profile_image, size: "100x100" %>
          <% end %>
        <% else %>
          <%= link_to user_path(post.user) do %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        <% end %>
      </td>
      <td>
        <a href="<%= post_path(post) %>"><%= post.title %></a>
      </td>
      <td>
        <%= post.body %>
      </td>
      <td>
        <% if post.image.attached? %>
          <%= image_tag post.image %>
        <% end %>
      </td>
      <td>
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
        <p>♡count</p>
   <% end %>
       
      </td>
    </tr>
    
  </tbody>
</table>



